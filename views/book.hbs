<h1>List of Books</h1>

<div>
    <a href="/book/new-book">New Book</a>
</div>
<br>
<table class="books-table">
    <tr>
        <th>Name</th>
        <th>Author</th>
        <th>Year</th>
        <th>Price</th>
    </tr>
    {{#each allBooks}}

    <td>{{name}}</td>
    <td>{{author}}</td>
    <td>{{year}}</td>
    <td class="price">{{price}}</td>

    <td>
        <a href="/book/{{_id}}/edit"> <button class="edit-button">Edit</button> </a>        
    </td>

    <form action="/book/{{_id}}/delete" method="POST">
       <td>
           <button class="delete-button">delete</button>
       </td>
    </form>
      
      <!--<form action="/book/{{_id}}/delete" method="POST">
         <td>
          <button>Delete Book</button>
          </td>
      </form>-->

    </tr>
    {{/each}}
</table>

