<div class="top-message">
  <h1>Creating New Book</h1>
</div>

<div class="container-button">
  <a href="/book"><button>Back</button></a>
</div>

<div class="container">

  <form action="/book/new-book" method="POST" class="book-form">
    <div class="card">

       <div class="row">
        <label for="name">
          Name
          <input type="text" name="name" id="name" required>
        </label>
      </div>
      <div class="row">
        <label for="author">
          Author
          <input type="text" name="author" id="author">
        </label>
      </div>
      <div class="row">
        <label for="year">
          Year
          <input type="number" name="year" id="year">
        </label>
      </div>
      <div class="row">
        <label for="price">
          Price
          <input type="number" name="price" id="price" required>
        </label>
      </div>
      <div class="container-button">
        <button type="submit">Create</button>
      </div>
    </div>
  </form>
</div>