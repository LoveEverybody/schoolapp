<h1>List of Students</h1>

<div>
    <a href="/student/new-student">New student</a>
</div>
<br>
<table class="student-table">
    <tr>
        <th>profileImage</th>
        <br> 
        <th>Name</th>
        <th>address</th>
        <th>email</th>
        <th>phoneNumber</th>
    </tr>
    {{#each student}}

    <td>{{name}}</td>
    <td>{{address}}</td>
    <td>{{email}}</td>
    <td>{{phoneNumber}}</td>

    <td>
        <a href="/student/{{_id}}/edit"> <button class="edit-button">Edit</button> </a>
    </td>

    <form action="/student/{{_id}}/delete" method="POST">
        <td>
            <button class="delete-button">delete</button>
        </td>
    </form>

    <!--<form action="/book/{{_id}}/delete" method="POST">
         <td>
          <button>Delete Book</button>
          </td>
      </form>-->

    </tr>
    {{/each}}
</table>
















